&i2c6 {
	status = "okay";
	ar1335_af_mipi2: ar1335_af_mipi1@42 {
		compatible = "econ,ar1335_af", "ar1335_af";
		reg = <0x42>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_csi_mclk>;
		clocks = <&clk IMX8MP_CLK_IPP_DO_CLKO2>;
		clock-names = "csi_mclk";
		assigned-clocks = <&clk IMX8MP_CLK_IPP_DO_CLKO2>;
		assigned-clock-parents = <&clk IMX8MP_CLK_24M>;
		assigned-clock-rates = <24000000>;
		csi_id = <0x01>;
		pwn-gpios = <&pca9555 12 GPIO_ACTIVE_HIGH>;
		rst-gpios = <&pca9555 13 GPIO_ACTIVE_LOW>;
		mclk = <24000000>;
		mclk_source = <0>;
		mipi_csi;
		status = "disabled";

		port {
			ar1335_af_mipi2_ep: endpoint {
				data-lanes = <1 2 3 4>;
				clock-lanes = <0>;
				remote-endpoint = <&mipi2_sensor_ep>;
			};
		};
	};
};

&ar1335_af_mipi2 {
	status = "okay";
};

&mipi_csi_1 {
	status = "okay";
	port@1 {
		reg = <1>;
		mipi2_sensor_ep: endpoint {
			remote-endpoint = <&ar1335_af_mipi2_ep>;
			data-lanes = <4>;
			csis-hs-settle = <23>;
			csis-clk-settle = <2>;
			csis-wclk;
		};
	};
};

&cameradev {
	status = "okay";
};

&isi_1 {
	status = "okay";
};
